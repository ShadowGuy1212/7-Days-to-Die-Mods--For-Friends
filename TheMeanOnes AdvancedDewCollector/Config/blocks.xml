<config>
    <append xpath="/blocks">

        <!-- Custom TM1 Advanced Dew Collector Block -->
        <block name="TM1_AdvancedDewCollector" extends="passive_collector" mod="true">
            <property name="Class" value="DewCollector"/>
            <property name="UnlockedBy" value="craftingWorkstations"/>
            <property name="WorkstationIcon" value="ui_game_symbol_water"/>
            <property name="CreativeMode" value="Player"/>
            <property name="DescriptionKey" value="TM1_AdvancedDewCollectorDesc"/> <!-- Custom Description Key -->
            <property name="Material" value="MFuelBarrelPolymer"/> <!-- Material for the block -->
            <property name="Shape" value="ModelEntity"/>
            <property name="CustomIcon" value="dewcollector"/>
            <property name="Model" value="#@modfolder:Resources/TM1Overhaul.unity3d?prefab_dewcollector_tm1.prefab"/> <!-- Custom Model -->
            <property name="MultiBlockDim" value="1,3,1"/> <!-- Dimensions for block placement -->
            <property name="ImposterExchange" value="imposterBlock" param1="77"/>
            <property name="WaterFlow" value="permitted"/>
            <property name="Place" value="TowardsPlacerInverted"/>
            <property name="RestrictSubmergedPlacement" value="true"/>
            <property name="AllowedRotations" value="Basic90"/>
            <property name="Path" value="solid"/> <!-- Ensures block is solid -->
            <property name="IsDecoration" value="true"/>
            <property name="StabilitySupport" value="false"/>
            <property name="OpenSound" value="collector_open"/> <!-- Sound when interacting -->
            <property name="CloseSound" value="collector_close"/>
            <property name="ConvertSound" value="collector_complete_item"/>
            <property name="MinConvertTime" value="21600"/> <!-- 6 game hours -->
            <property name="MaxConvertTime" value="36000"/> <!-- 10 game hours -->
            <property name="ConvertToItem" value="drinkJarRiverWater"/> <!-- Default conversion product -->
            <property name="ModdedConvertToItem" value="drinkJarBoiledWater"/> <!-- Modified conversion product -->
            <property name="ModdedConvertSpeed" value="3"/> <!-- Speed multiplier for modded conversions -->
            <property name="ModdedConvertCount" value="6"/> <!-- Produces 6 items per conversion -->
            <property name="ModTransformNames" value="1,2,3"/>
            <property name="ModTypes" value="Speed,Count,Type"/>
            <property name="EconomicValue" value="10"/>
            <property name="EconomicBundleSize" value="6"/> <!-- Stack size limit of 6 units -->
            <property name="SellableToTrader" value="false"/>
            <property name="MaxDamage" value="300"/> <!-- Durability of the block -->
            <property name="Destroyable" value="true"/> <!-- Makes the block destroyable -->
            <property name="ShowOnDamage" value="true"/> <!-- Display health bar when damaged -->
            <property name="HitIndicator" value="true"/> <!-- Visual indication when the block is hit -->
            <property name="HeatMapStrength" value="2"/>
            <property name="HeatMapTime" value="5000"/>
            <property name="HeatMapFrequency" value="1000"/>
            <property class="RepairItems">
                <property name="resourceForgedIron" value="3"/> <!-- Items needed to repair -->
            </property>
            <property name="ModelOffset" value="0,0,-0.40"/> <!-- Adjusted model offset -->

            <!-- Passive Collector Properties -->
            <property name="HasItemConversions" value="true"/>
            <item_conversion item="drinkJarRiverWater" lower_range="6" upper_range="6" weight="21"/> <!-- Produces 6 units per cycle -->

            <!-- Drop Properties when destroyed -->
            <drop event="Harvest" name="resourceScrapIron" count="10,15" tag="allHarvest"/>
            <drop event="Harvest" name="resourceMetalPipe" count="1,3" tag="allHarvest"/>
            <drop event="Destroy" name="resourceScrapIron" count="10,15"/>
            <property name="DestroyFX" value="blockdestroy_metal,collector_destroy"/>
            <property name="SortOrder1" value="B281"/>
            <property name="SortOrder2" value="0100"/>
            <property name="Group" value="Basics,Food/Cooking,Building,advBuilding"/>
            <property name="Tags" value="workstationSkill,twitch_workstation"/>
            <property name="FilterTags" value="MC_playerBlocks,SC_decor"/>
        </block>

    </append>
</config>
