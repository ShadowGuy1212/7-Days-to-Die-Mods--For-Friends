	<!-- Wood Writable Crate Modifications -->
	<!-- Remove the 'Destroy' event drop -->
	<remove xpath="/blocks/block[@name='cntWoodWritableCrate']/drop[@event='Destroy']"/>
	<!-- Remove the 'DowngradeBlock' property -->
	<remove xpath="/blocks/block[@name='cntWoodWritableCrate']/property[@name='DowngradeBlock']"/>
	<!-- Append new drop events -->
	<append xpath="/blocks/block[@name='cntWoodWritableCrate']">
		<!-- Add a 'Destroy' event drop that drops 'cntWoodWritableCrate' with a count of 1 -->
		<drop event="Destroy" name="cntWoodWritableCrate" count="1"/>
		<!-- Add a 'Harvest' event drop that drops 'resourceWood' with a count of 0 -->
		<drop event="Harvest" name="resourceWood" count="0"/>
	</append>
    
