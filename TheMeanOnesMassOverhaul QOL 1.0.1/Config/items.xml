	<!-- Tool Category -->
	<!-- Adjusts stack sizes for all items starting with 'tool' -->
	<set xpath="/items/item[starts-with(@name, 'tool')]/property[@name='Stacknumber']/@value">5000</set>

	<!-- Resource Category -->
	<!-- Adjusts stack sizes for all items starting with 'resource' -->
	<set xpath="/items/item[starts-with(@name, 'resource')]/property[@name='Stacknumber']/@value">8000</set>
  
	<!-- Ammo Category -->
	<!-- Adjusts stack sizes for all items starting with 'ammo' -->
	<set xpath="/items/item[starts-with(@name, 'ammo')]/property[@name='Stacknumber']/@value">2500</set>

	<!-- Thrown Weapons Category -->
	<!-- Adjusts stack sizes for all items starting with 'thrown' -->
	<set xpath="/items/item[starts-with(@name, 'thrown')]/property[@name='Stacknumber']/@value">8000</set>

	<!-- Book Category -->
	<!-- Adjusts stack sizes for all items starting with 'book' -->
